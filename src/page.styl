.row .well
	position relative
	left -20px

#incompatible-size
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	background-color white
	z-index 2

	@media (min-width: 1200px) and (min-height: 768px)
		display none

#pleaseWaitBox
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	background-color rgba(255, 255, 255, 0.9)
	z-index 2

#compatible-size
	@media (max-width: 1199px), (max-height: 767px)
		display none

#courselist, #studentlist, #validatorlist
	width 50%
	margin-top 99px
	position relative

	.table
		tr
			cursor pointer

			td
				vertical-align middle

#courselist .table tr td
	&:nth-of-type(1)
		text-align center
		width 20%

	&:nth-of-type(2)
		text-align right
		width 20%

#studentlist .table tr td
	&:nth-of-type(1)
		text-align left
		width 30%

#validatorlist .table tr td
	&:nth-of-type(1)
		text-align left
		width 20%

#coursedetails, #studentdetails, #validatordetails
	margin-top 62px
	
	&.affix-top
		position absolute

	&.affix
		top 60px
	
	.navbar
		margin-bottom 0

		.navbar-inner
			border-bottom-left-radius 0
			border-bottom-right-radius 0
			border-bottom none

.boxees
	margin-top inherit
	
	.navbar
		margin-bottom 0

		.navbar-inner
			border-bottom-left-radius 0
			border-bottom-right-radius 0
			border-bottom none

	.box-bordered.ht300
		height auto
		tbody
			display block
			overflow scroll
			height 300px
			&.el
				height 254px
				tr:first-of-type
					td
						border-top none
			
			&.pscT
				td:nth-last-of-type(2)
					padding-top 5px
					padding-bottom 5px
					width 10%
					text-align right

#courseheader, #studentheader, #validatorheader
	z-index 1
	height 0px

	&.affix-top
		position absolute

	&.affix
		top 60px

	#courseheader-inner, #studentheader-inner, #validatorheader-inner
		position relative
		height 0px

		#courseheader-back, #studentheader-back, #validatorheader-back
			position absolute
			left 0
			top -20px
			height 119px
			right 50%
			background-color white

		.row
			width 50%

		.navbar, .table
			position relative

		.table
			border-bottom none
			margin-bottom 0

			th
				cursor pointer

#courseheader .table
	th:nth-of-type(1)
		text-align center

	th:nth-of-type(2)
		text-align right

#studentheader .table
	th:nth-of-type(1)
		text-align left

#validatorheader .table
	th:nth-of-type(1)
		text-align left

.tcenter
	text-align center

.tright
	text-align right

.savecancel
	margin 10px

.box-bordered
	border solid 1px #DDD
	overflow-x visible
	overflow-y scroll

	&.ht300
		height 147px

	.table
		border-bottom none
		margin-bottom 0
		margin-top -1px

		td:first-of-type
			width 10%
			text-align right

		td:last-of-type
			padding-top 5px
			padding-bottom 5px
			width 10%
			text-align right

table.table
	border-bottom solid 1px #DDD

.sectionsdetails
	width 300px

#makeschedule
	td
		width 25px
		text-align center
		padding 5px

		&:hover
			background-color #f5f5f5

		&.selected
			background-color #d9edf7

			&:hover
				background-color #c4e3f3

.modal-footer
	text-align left

.table-visibleStriped
	tr:nth-child(odd)
		td, th
			background-color #f9f9f9

		&:hover
			td, th
				background-color #f5f5f5

	tr.info
		background-color #d9edf7

		&:hover
			background-color #c4e3f3

.navbar
	.navbar-form
		.input-prepend, .input-append
			margin 5px 0

#departmentsToggles
	margin 2px 0

#coursesbox, .boxees
	.box-bordered
		.table
			tr
			td:nth-of-type(1)
				width 25%
				padding-left 20px
				text-align left
			td:nth-of-type(2)
				width 75%
				text-align left

				.btn-group
					display inline-table
					
					+ .btn-group
						margin-left 0px

.btn.btn-narrow
	padding 4px 6px

.carret
	display inline-block
	margin-top 8px
	width 0
	height 0
	vertical-align top
	border-top 4px solid #000
	border-right 4px solid transparent
	border-left 4px solid transparent
	content ""

.btn-info
	.carret
		border-top 4px solid #fff

input[readOnly]
	cursor default

.stat-box
	border solid 1px #CCC
	border-radius 4px
	padding 8px
	p
		text-align left
	div
		line-height 1
		text-align center
		font-size 60px

.commitBar
	button
		margin-bottom 10px

.control-group
	.controls
		.btn.span3
			margin 0

.well
	.wellBtn
		margin -5px

.label-test
	padding 4px
	font-weight normal
	background-color rgb(238, 238, 238)
	color black
	text-shadow none
	border solid 1px rgb(204, 204, 204)