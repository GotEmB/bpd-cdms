.row .well
	position relative
	left -20px

#incompatible-size
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	background-color white
	z-index 2

	@media (min-width: 1200px)
		display none

#compatible-size
	@media (max-width: 1199px)
		display none

#courselist
	width 50%
	margin-top 100px
	position relative

	.table
		tr
			cursor pointer

			td
				vertical-align middle

				&:nth-of-type(1)
					text-align center
					width 16%

				&:nth-of-type(2)
					text-align right
					width 20%

#coursedetails
	margin-top 63px
	
	&.affix-top
		position absolute

	&.affix
		top 60px
	
	.navbar
		margin-bottom 0

		.navbar-inner
			border-bottom-left-radius 0
			border-bottom-right-radius 0
			border-bottom none

#courseheader
	z-index 1

	&.affix-top
		position absolute

	&.affix
		top 60px

	#courseheader-inner
		position relative

		#courseheader-back
			position absolute
			left 0
			top -19px
			bottom 0
			right 50%
			background-color white

		.navbar, .table
			position relative

		.table
			border-bottom none
			margin-bottom 0

			th:nth-of-type(1)
				text-align center

			th:nth-of-type(2)
				text-align right

.tcenter
	text-align center

.tright
	text-align right

.savecancel
	margin 10px

.box-bordered
	border solid 1px #DDD
	overflow-x none
	overflow-y scroll

	&.ht300
		height 221px

	.table
		border-bottom none
		margin-bottom 0
		margin-top -1px

		td:first-of-type
			width 10%
			text-align right

		td:last-of-type
			padding-top 5px
			padding-bottom 5px
			width 10%
			text-align right

.table
	border-bottom solid 1px #DDD

.sectionsdetails
	width 300px

#makeschedule
	td
		width 25px
		text-align center
		cursor pointer
		padding 5px

		&:hover
			background-color #f5f5f5

		&.selected
			background-color #d9edf7

			&:hover
				background-color #c4e3f3